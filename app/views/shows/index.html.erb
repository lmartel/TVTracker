<%- model_class = Show -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= "#{model_class.human_attribute_name(:ended)}?" %></th>
      <th><%= model_class.human_attribute_name(:airtime) %></th>
      <th>Next Episode</th>
      <th>All Episodes</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= link_to show.name, show_path(show) %></td>
        <td><%= show.ended ? "All done" : "Still airing" %></td>
        <td><%= show.airtime %></td>
        <td>
          <% ep = show.next_episode %>
          <% if ep %>
            <%= ep.readable_name_and_airdate %>
          <% else %>
            Unknown
          <% end %>
        </td>
        <td><%= link_to "Episode List" %></td>
        <td>
          <a class="btn btn-inverse" href="<%= sync_url(id: show.id)%>">
            <i class="icon-download-alt icon-white"></i>
             Update
          </a>
          <%#= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_show_path(show), :class => 'btn btn-mini' %>
          <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      show_path(show),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_show_path,
            :class => 'btn btn-primary' %>
