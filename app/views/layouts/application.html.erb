<!DOCTYPE html>
<html>
<head>
  <title>TVTracker</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.min.css" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <% if Rails.env.production? %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-42769593-1', 'lpm.io');
      ga('send', 'pageview');

    </script>
  <% end %>
</head>
<body onload="scrollIfHash()">
<div class="artsy-wrapper">
    <div class="artsy"></div>
</div>
<%= render :partial => "layouts/navbar" %>
<div class="container">
  <div class="row">
    <div class="span12"><%= yield %></div>
  </div>
</div>
<%= render :partial => "layouts/footer" %>
<% if ENV['OSS'] %>
  <a href="https://github.com/lmartel/TVTracker"><img style="position: fixed; top: 0; right: 0; border: 0; z-index: 10001;" src="https://s3.amazonaws.com/github/ribbons/forkme_right_orange_ff7600.png" alt="Fork me on GitHub"></a>
<% end %>
</body>
</html>
